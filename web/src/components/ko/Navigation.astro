---
import { getRelativeLocaleUrl } from 'astro:i18n';

const koUrl = getRelativeLocaleUrl("ko", "");
const jaUrl = getRelativeLocaleUrl("ja", "");
const enUrl = getRelativeLocaleUrl("en", "");
---

<nav class="bg-white shadow-lg">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <div class="text-xl font-bold text-gray-800">
          <a href={koUrl}>카시와 영광교회</a>
        </div>
      </div>
      <div class="flex items-center space-x-4">
        <a href={jaUrl} class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
          일본어
        </a>
      </div>
    </div>
  </div>
</nav>
