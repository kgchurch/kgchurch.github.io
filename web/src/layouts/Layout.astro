---
import GA from '../components/GA.astro';
import SEO_ko from '../components/ko/SEO.astro';
import SEO_ja from '../components/ja/SEO.astro';

var SEO;
if (Astro.currentLocale == "ja") {
	SEO = SEO_ja;
} else {
	SEO = SEO_ko;
}
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<SEO />
		<GA />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
